{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "types": [
      "@remix-run/node",
      "vite/client"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.mts",
    "next-env.d.ts",
    ".webapp/types/**/*.ts",
    "../vite.config.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "root.tsx",
    "routes/*",
    "**/*.client.*",
    "**/*.server.*",
    "**/.client/*",
    "**/.server/*"
  ]
}