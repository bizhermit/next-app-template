{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": [
      "@remix-run/node",
      "vite/client"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "../vite.config.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "app/*",
    "pages/*",
    "middleware.ts"
  ]
}