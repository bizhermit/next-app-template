{
  "name": "node-webapp-template",
  "version": "0.0.0",
  "description": "node-webapp templates",
  "private": true,
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "predev": "npm run route",
    "type-check": "npx tsc -p ./src/tsconfig.json --noEmit",
    "dev": "npm run next:dev",
    "next:dev": "bash scripts/next-dev.sh",
    "prenext:build": "npm run route",
    "next:build": "npx next build",
    "next": "bash scripts/next-start.sh",
    "export": "npm run clean && npx cross-env NEXT_OUTPUT=\"dist\" npm run build",
    "lint": "npx next lint",
    "format": "npx next lint --fix",
    "route": "node scripts/next-route.mjs",
    "remix:dev": "bash scripts/remix-dev.sh",
    "remix:build": "npx remix vite:build",
    "remix": "bash scripts/remix-start.sh",
    "jest": "npx jest",
    "test": "npm run type-check | npm run jest",
    "playwright": "npx playwright test && npx playwright show-report",
    "migrate": "npx prisma migrate dev"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.4.2",
    "@prisma/client": "^5.19.1",
    "@remix-run/node": "^2.14.0",
    "@remix-run/react": "^2.14.0",
    "@remix-run/serve": "^2.14.0",
    "isbot": "^5.1.17",
    "next": "^15.0.2",
    "next-auth": "^5.0.0-beta.25",
    "react": "^19.0.0-rc-33c7bd9a-20241104",
    "react-dom": "^19.0.0-rc-33c7bd9a-20241104"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.1",
    "@remix-run/dev": "^2.14.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.0.0-rc.0",
    "jest": "^29.7.0",
    "prisma": "^5.19.1",
    "remix-flat-routes": "^0.6.5",
    "ts-jest": "^29.2.5",
    "typescript": "^5",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}